<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<link href="~/Content/bootstrap-chosen.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Save A Life", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("UserList", "UserList", "Registration")</li>
                    @*<li>@Html.ActionLink("Registration", "Registration", "Registration")</li>
                    <li>@Html.ActionLink("Login", "Login", "Login")</li>*@
                    <li>@Html.ActionLink("SearchDonor", "SearchDonor", "SearchDonor")</li>

                </ul>
                <ul class="nav navbar-nav" style="float: right !important">
                    @if (Session["FullName"] != null)
                    {
                        <li><p style="color:#fff; margin-top:15px">Hello @Session["FullName"]</p></li>
                        <li>@Html.ActionLink("Logout", "Logout", "Registration")</li>
                        <li>@Html.ActionLink("UserProfile", "UserProfile", "UserProfile")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Registration", "Registration", "Registration")</li>
                        <li>@Html.ActionLink("Login", "Login", "Login")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BY DXD Studio</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @RenderSection("scripts", required: false)
<script src="~/Scripts/chosen.jquery.js"></script>

</body>
</html>
