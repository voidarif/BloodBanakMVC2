            </div>
        </div>


        <div class="form-group">
            <label>Enter Thana name</label>
            @Html.ValidationMessageFor(x => x.Sub_District, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Sub_District, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Enter Union name</label>
            @Html.ValidationMessageFor(x => x.Union_council, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Union_council, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Enter Village name</label>
            @Html.ValidationMessageFor(x => x.Village, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Village, new { @class = "form-control" })
        </div>




        <div class="form-group">
            <div class="row">
                <label>Blood Group</label>
                @*@Html.ValidationMessageFor(x => x.BloodGroup, "", new { @class = "error" })
                    @Html.TextBoxFor(x => x.BloodGroup, new { @class = "form-control" })*@
                <div class="container">
                    <select class="col-md-10" name="BloodGroup" asp-items="@Model= x.BloodGroup">
                        <option>Select Group</option>
                        <option>A+</option>
                        <option>A-</option>
                        <option>B+</option>
                        <option>B-</option>
                        <option>o+</option>
                        <option>O-</option>
                        <option>AB+</option>
                        <option>AB-</option>

                    </select>
                </div>
            </div>
        </div>


        <div class="form-group">
            <label>Criterias</label>
            @Html.TextAreaFor(x => x.Criterias, new { @class = "form-control", @rows = "10" })
